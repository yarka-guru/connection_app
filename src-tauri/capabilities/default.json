{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for RDS SSM Connect",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-spawn",
    "shell:allow-execute",
    "shell:allow-open",
    "store:default",
    "opener:default",
    "updater:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/gui-adapter",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}
